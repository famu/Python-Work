    print smaller
    result = []
    s = b = 0
    for e in range(k):        
        if s<len(smaller) and b<len(bigger):
            if abs(smaller[s])<bigger[b]:
               result.append(smaller[s])
               s+=1
            else:
               result.append(bigger[b])
               b+=1
        elif s>=len(smaller):
               result.append(bigger[b])
        else:
               result.append(smaller[s])
    return [i+x for i in result]
